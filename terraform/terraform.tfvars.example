# Core Configuration
aws_region    = "us-west-2"
environment   = "dev"
project_name  = "treza"

# Existing DynamoDB Configuration
# This should be the name of your existing DynamoDB table from treza-app
existing_dynamodb_table_name = "treza-enclaves"

# Networking Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-west-2a", "us-west-2b"]

# ECS Configuration
ecs_cluster_name        = "treza-infrastructure"
terraform_runner_cpu    = 1024
terraform_runner_memory = 2048

# Timeout Configuration (in seconds)
deployment_timeout_seconds = 1800  # 30 minutes
destroy_timeout_seconds    = 1200  # 20 minutes

# Monitoring Configuration
log_retention_days = 30

# Security Configuration
# CRITICAL: Update these CIDRs to match your actual network topology
# Never use 0.0.0.0/0 for SSH access - this is a security risk!
allowed_ssh_cidrs = [
  "10.0.0.0/16",        # VPC CIDR - allows SSH from within VPC
  "172.16.0.0/16",      # Corporate network (REPLACE with your actual network)
  # "203.0.113.0/24",   # Example office network (REPLACE with your public IP/CIDR)
  # "YOUR_OFFICE_IP/32" # Add your office public IP here
]
management_cidrs  = [
  "10.0.10.0/24",       # Management subnet within VPC
  "10.0.11.0/24"        # Secondary management subnet
]

security_group_rules = {
  ssh_port         = 22
  enclave_port     = 8080
  monitoring_port  = 9090
  allowed_protocols = ["tcp", "udp"]
}

# Additional Tags (optional)
additional_tags = {
  Team        = "infrastructure"
  CostCenter  = "engineering"
  Environment = "development"
}